// 用法：直接使用nc-1px等类
// 扩展用法：首先引入此stylus,然后：
// .class
//   &:after
//     setLine(#000,3px,10px)
// 第一个参数边框颜色，第二个弧度，第三个应用此类的元素的设计图高度
setTopLine(c=rgb(199, 199, 199, 1))
  content " "
  position absolute
  left 0
  top 0
  right 0
  height 1px
  border-top 1px solid c
  color c
  transform-origin 0 0
  transform scaleY(0.5)
.setTopLine
  setTopLine()

setBottomLine(c=rgb(199, 199, 199, 1))
  content " "
  position absolute
  left 0
  bottom 0
  right 0
  height 1px
  border-bottom 1px solid c
  color c
  transform-origin 0 100%
  transform scaleY(0.5)
.setBottomLine
  setBottomLine()

setLeftLine(c=rgb(199, 199, 199, 1))
  content " "
  position absolute
  left 0
  top 0
  width 1px
  bottom 0
  border-left 1px solid c
  color c
  transform-origin 0 0
  transform scaleX(0.5)
.setLeftLine
  setLeftLine()

setRightLine(c=rgb(199, 199, 199, 1))
  content " "
  position absolute
  right 0
  top 0
  width 1px
  bottom 0
  border-right 1px solid c
  color c
  transform-origin 100% 0
  transform scaleX(0.5)
.setRightLine
  setRightLine()

setLine(c=rgb(199, 199, 199, 1), br=0, h=100%)
  content " "
  position absolute
  left 0
  top 0
  width 200%
  height 2*h
  border 1px solid c
  border-radius br
  color c
  transform-origin left top
  transform scale(0.5)
.setLine
  setLine()

.nc-1px, .nc-1px-t, .nc-1px-b, .nc-1px-tb, .nc-1px-l, .nc-1px-r
  position relative
.nc-1px
  &:before
    @extend .setLine
.nc-1px-t
  &:before
    @extend .setTopLine
.nc-1px-b
  &:after
    @extend .setBottomLine
.nc-1px-tb
  &:before
    @extend .setTopLine
  &:after
    @extend .setBottomLine
.nc-1px-l
  &:before
    @extend .setLeftLine
.nc-1px-r
  &:after
    @extend .setRightLine
